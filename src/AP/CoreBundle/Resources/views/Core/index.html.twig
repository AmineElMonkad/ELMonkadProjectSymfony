{# On utilise ici le layout général, qui se situe dans ce même CoreBundle maintenant #}
{% extends "APCoreBundle::layout.html.twig" %}

{% block title %}
  Page d'accueil - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>Page d'accueil</h2>

  {# On affiche tous les messages flash dont le nom est « info » #}
  {% for message in app.session.flashbag.get('info') %}
    <div class="alert alert-info">Message flash : {{ message }}</div>
  {% endfor %}


    <p>Bienvenue dans notre site Voici la liste de tous le animaux : </p>

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	
	{% for user in users %}
		
	  		{% if user.id != app.user.id %}
	  					<div class="well">
	  						Username : {{ user.username }}, Race :  {{user.race}} <a href="{{ path('ap_user_friend', {'id': user.id}) }}" class="btn btn-success">Ajouter à mon enclos</a>
	  					</div>
	  			
	  		{% endif %}
  		
    {% endfor %}

{% endif %}

{% endblock %}
